// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum Occupation {
  STUDENT
  ENGINEER
  DOCTOR
  OTHER
}


enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}

enum EntryStatus {
  DONE
  NOT_DONE
  PARTIAL
}

// ============================================
// MODELS
// ============================================

model User {
  id                     String     @id @default(uuid()) @db.Uuid
  fullName               String     @db.VarChar(100)
  email                  String     @unique @db.VarChar(255)
  password               String     @db.VarChar(255)
  occupation             Occupation
  dateOfBirth            DateTime?  @db.Date
  age                    Int?       @db.SmallInt
  timezone               String     @default("UTC") @db.VarChar(50)
  emailVerified         Boolean    @default(false)
  emailVerificationToken String?    @db.VarChar(255)
  emailVerificationExpiry DateTime?
  emailRemindersEnabled  Boolean    @default(true)
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt

  // Relations
  habits        Habit[]
  refreshTokens RefreshToken[]

  @@index([email])
  @@index([createdAt])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  token     String   @unique
  userId    String   @db.Uuid
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model Habit {
  id           String    @id @default(uuid()) @db.Uuid
  userId       String    @db.Uuid
  name         String    @db.VarChar(100)
  description  String?   @db.VarChar(500)
  frequency    Frequency
  scheduleDays Json?     // Array of days: [0,1,2,3,4,5,6] for weekly, [1,15] for monthly, etc.
  startDate    DateTime  @db.Date
  endDate      DateTime? @db.Date
  isActive     Boolean   @default(true)
  reminderTime String?   @db.VarChar(5) // "HH:mm" (24h)
  timezone     String    @default("UTC") @db.VarChar(50) // User's timezone or specific habit timezone
  deletedAt    DateTime? // Soft delete timestamp
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user    User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs    HabitLog[]

  @@index([userId])
  @@index([isActive])
  @@index([startDate])
  @@index([endDate])
  @@index([deletedAt])
  @@index([createdAt])
  @@map("habits")
}

model HabitLog {
  id              String      @id @default(uuid()) @db.Uuid
  habitId         String      @db.Uuid
  date            DateTime    @db.Date
  completed       Boolean     @default(false)
  status          EntryStatus @default(NOT_DONE)
  percentComplete Int?        @db.SmallInt // 0-100
  reason          String?     @db.VarChar(300)
  notes           String?     @db.VarChar(1000)
  reminderSent    Boolean     @default(false)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  // One log per habit per day
  @@unique([habitId, date])
  @@index([habitId])
  @@index([date])
  @@index([status])
  @@map("habit_logs")
}
